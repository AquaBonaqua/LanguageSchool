<Page x:Class="LanguageSchool.Pages.PageClients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.Pages"
      mc:Ignorable="d" 
      Height="681" Width="1400" 
      Title="PageClients" Background="#FF303030">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <DataGrid AutoGenerateColumns="False"  CanUserAddRows="False" CanUserDeleteRows="False" ColumnWidth="*"  Name="ClientsGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Пол" Width="Auto"  Binding="{Binding Gender.Name}"/>
                <DataGridTextColumn Header="ФИО" Width="Auto">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{1} {0} {2}">
                            <Binding Path="LastName" />
                            <Binding Path="FirstName" />
                            <Binding Path="Patronymic" />
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Дата рождения" Width="Auto" Binding="{Binding Birthday, StringFormat=\{0:dd.MM.yyyy \} }"/>
                <DataGridTextColumn Header="Email"  Width="Auto" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Номер" Width="Auto"  Binding="{Binding Phone}"/>
                <DataGridTextColumn Header="Дата добавления" Width="Auto"  Binding="{Binding RegistrationDate, StringFormat=\{0:dd.MM.yyyy \}}"/>
                <DataGridTextColumn Header="Дата посещения"  Width="Auto" Binding="{Binding RegistrationDate, StringFormat=\{0:dd.MM.yyyy \}}"/>
                <DataGridTextColumn Header="Количество посещений" Width="Auto"  Binding="{Binding RegistrationDate, StringFormat=\{0:dd.MM.yyyy \}}"/>
                <DataGridTextColumn Header="Список тегов"  Binding="{Binding Gender.Name}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Name="StackStatus" Margin="0 0 32 0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Foreground="#FFDADCDF"  FontSize="15" >Количество записей:</TextBlock>
                <ComboBox Margin="16 0 0 0" Name="NumberOfRecords" FontSize="15" Foreground="#FFDADCDF" Height="30" Width="180" >
                    <ComboBoxItem>10</ComboBoxItem>
                    <ComboBoxItem>50</ComboBoxItem>
                    <ComboBoxItem>200</ComboBoxItem>
                    <ComboBoxItem>Все</ComboBoxItem>
                </ComboBox>
                <Label x:Name='PageInfo'
                       Foreground='AntiqueWhite' />

                <Button x:Name='Backwards'
                        Padding='4'
                        Content='&lt; Previous'
                        Margin='6'
                        ></Button>
                <Button x:Name='Forward'
                        Padding='4'
                        Content='&gt; Next'
                        Margin='6'
                        ></Button>
            </StackPanel>

          

        </StackPanel>
    </Grid>
</Page>
